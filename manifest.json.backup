{
  "schemaVersion": "1.0",
  "name": "ministry-data",
  "version": "2.0.0",
  "displayName": "Church Ministry Data Manager",
  "description": "Manage church ministry data including sermons, volunteers, and schedules. Provides tools for data cleaning, analysis, and scheduling assistance.",
  "publisher": {
    "name": "Grace Irvine Ministry",
    "url": "https://github.com/your-repo/Grace-Irvine-Ministry-Clean"
  },
  "license": "MIT",
  "mcp_config": {
    "entry_point": "mcp_server.py",
    "transport": "stdio",
    "runtime": {
      "type": "python",
      "python_version": ">=3.11"
    },
    "env": {
      "GOOGLE_APPLICATION_CREDENTIALS": "config/service-account.json",
      "CONFIG_PATH": "config/config.json"
    }
  },
  "configuration": {
    "required": [
      {
        "name": "google_credentials",
        "type": "file",
        "description": "Google Service Account JSON file for accessing Google Sheets",
        "target": "config/service-account.json"
      },
      {
        "name": "config_file",
        "type": "file",
        "description": "Configuration JSON file with Google Sheets URLs and settings",
        "target": "config/config.json"
      }
    ],
    "optional": [
      {
        "name": "log_level",
        "type": "string",
        "description": "Logging level (DEBUG, INFO, WARNING, ERROR)",
        "default": "INFO",
        "env": "LOG_LEVEL"
      }
    ]
  },
  "capabilities": {
    "tools": [
      {
        "name": "clean_ministry_data",
        "description": "Trigger data cleaning pipeline from raw Google Sheets data"
      },
      {
        "name": "generate_service_layer",
        "description": "Generate or update service layer domain data (sermon and volunteer domains)"
      },
      {
        "name": "validate_raw_data",
        "description": "Validate raw data quality, check required fields and format errors"
      },
      {
        "name": "add_person_alias",
        "description": "Add person alias mapping (e.g., map 'Pastor Zhang' and '张牧师' to the same person_id)"
      },
      {
        "name": "get_pipeline_status",
        "description": "Get data cleaning pipeline status and history"
      }
    ],
    "resources": [
      {
        "uri": "ministry://sermon/records",
        "name": "sermon-records",
        "description": "Sermon domain records (including sermon titles, preachers, scriptures, songs)"
      },
      {
        "uri": "ministry://sermon/by-preacher/{preacher_name}",
        "name": "sermon-by-preacher",
        "description": "Query sermon records by preacher"
      },
      {
        "uri": "ministry://sermon/series",
        "name": "sermon-series",
        "description": "Sermon series information and progress"
      },
      {
        "uri": "ministry://volunteer/assignments",
        "name": "volunteer-assignments",
        "description": "Volunteer service assignments (worship team, technical team, etc.)"
      },
      {
        "uri": "ministry://volunteer/by-person/{person_id}",
        "name": "volunteer-by-person",
        "description": "Query all service records for a specific person"
      },
      {
        "uri": "ministry://volunteer/availability/{year_month}",
        "name": "volunteer-availability",
        "description": "Query vacant positions within a time range"
      },
      {
        "uri": "ministry://stats/summary",
        "name": "ministry-stats",
        "description": "Comprehensive statistics of church ministry data"
      },
      {
        "uri": "ministry://stats/preachers",
        "name": "preacher-stats",
        "description": "Preacher statistics (sermon count, scripture coverage, etc.)"
      },
      {
        "uri": "ministry://stats/volunteers",
        "name": "volunteer-stats",
        "description": "Volunteer statistics (service count, role distribution, etc.)"
      },
      {
        "uri": "ministry://config/aliases",
        "name": "alias-mappings",
        "description": "Person alias mapping table"
      }
    ],
    "prompts": [
      {
        "name": "analyze_preaching_schedule",
        "description": "Analyze preaching schedule and sermon series progress"
      },
      {
        "name": "analyze_volunteer_balance",
        "description": "Analyze volunteer service workload balance"
      },
      {
        "name": "find_scheduling_gaps",
        "description": "Find scheduling gaps"
      },
      {
        "name": "check_data_quality",
        "description": "Check data quality and completeness"
      },
      {
        "name": "suggest_alias_merges",
        "description": "Suggest person aliases that may need to be merged"
      }
    ]
  },
  "icon": "icon.svg",
  "homepage": "https://github.com/your-repo/Grace-Irvine-Ministry-Clean",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/Grace-Irvine-Ministry-Clean"
  },
  "keywords": [
    "church",
    "ministry",
    "volunteers",
    "sermons",
    "scheduling",
    "data-management"
  ]
}

